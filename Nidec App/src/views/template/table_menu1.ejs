    <script> 
$(document).ready(function(){
        $('#menu')
            .on( 'processing.dt', function ( e, settings, processing ) {
                $('#processingIndicator').css( 'display', processing ? 'block' : 'none' );
            } )
        var table = $('#menu').DataTable( {
                                deferRender:    true,
                                 "dom": "<'row'<'col-sm-4'l><'col-sm-5 text-center'B><'col-sm-3'f>>" +
                                      "<'row'<'col-sm-12'tr>>" +
                                      "<'row'<'col-sm-5'i><'col-sm-7'p>>" 
                                        ,
                                 "buttons": [
                                     'copy', 'excel', 'pdf', 'print'
                                 ],
                                  "language": {
                                    "processing" : '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>',
                                    "loadingRecords": ""},
                                  "processing": true,
                                  "serverSide": false,
                                  "ajax": {"url":'/tables',"dataSrc":""},
                                  "columns":  [
                                      { "mData" : "created" },
                                      { "mData" : "speed_reference" }
                                    ]
                             } );


        $.fn.dataTable.ext.search.push(
        function (settings, data, dataIndex) {

        $(function () {
            $('#min').datetimepicker({
                format : 'DD/MM/YYYY HH:mm' ,
                useCurrent: false});
            $('#max').datetimepicker({
                format : 'DD/MM/YYYY HH:mm',
                useCurrent: false //Important! See issue #1075
            });
        });


            var min = null;
            var max = null;
            if($('#min').val()!=""){ min = moment($('#min').val(),"DD/MM/YYYY HH:mm").format("x")};
            if($('#max').val()!=""){ max = moment($('#max').val(),"DD/MM/YYYY HH:mm").format("x")};
            var evalDate =  moment(data[0],"DD/MM/YYYY HH:mm").format("x");
            if (min == null && max == null) { return true; }
            if (min == null && evalDate <= max) { return true;}
            if(max == null && evalDate >= min) {return true;}
            if (evalDate <= max && evalDate >= min) { return true; }
            return false;
        }
        );
            $("#min").on("dp.change", function (e) {
                table.draw();
            });
            $("#max").on("dp.change", function (e) {
                table.draw();
            });
       
            // $("#min").datetimepicker({ onSelect: function () { table.draw(); },changeMonth: true, changeYear: true });
            // $("#max").datetimepicker({ onSelect: function () { table.draw(); },changeMonth: true, changeYear: true });
            

            // Event listener to the two range filtering inputs to redraw on input
            // $('#min, #max').change(function () { table.draw(); });
});

    </script>
